<div class="relative overflow-x-auto shadow-md sm:rounded-lg" data-controller="checkbox-select-all">
  <table class="w-full text-sm text-left text-gray-500 rtl:text-right dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="p-4">
          <div class="flex items-center">
            <input type="checkbox" data-checkbox-select-all-target="checkboxAll" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
            <label  class="sr-only">checkbox</label>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q, :name, "名称") %>
        </th>
        <th scope="col" class="px-6 py-3">
          是否掌握
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q, :created_at, "添加时间") %>
        </th>
        <th scope="col" class="px-6 py-3">
          操作
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "words/word", locals: { book: book }, collection: words %>
    </tbody>
  </table>
</div>
<div class="flex justify-end mt-6 mr-4">
  <% if @pagy.count > @pagy.items %>
    <div class="">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
